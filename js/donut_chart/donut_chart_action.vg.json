{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "title": "Action",
  "background": "#1B262C",
  "description": "A simple donut chart with embedded data.",
  "transform": [
    {"filter": "datum.Genre == 'Action'"},
    {"calculate": "'$' + datum.sales + ' Million'", "as": "globalSales"}
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/MaryamPeer/VideoGames/main/data/Game_Sales.csv"
  },
  "encoding": {
    "theta": {"field": "sales", "type": "quantitative", "stack": true},
    "color": {
      "field": "Platform", 
      "type": "nominal",
      "scale": {"range": ["#52ad9c", "#f07c7a", "#FFC15E"]},
      "legend": {
        "orient": "top-right",
        "labelFontSize": 12,
        "titleFontSize": 15
      }
    },
    "tooltip": [
      {"field": "Platform", "type": "nominal"},
      {"field": "globalSales", "type": "nominal", "title": "Global Sales"}
    ]
  },
  "layer": [
    {
      "mark": {
        "type": "arc", 
        "innerRadius": {"expr": "height/4"}, 
        "outerRadius": {"expr": "height/2.4"}, 
        "stroke": "#1B262C", 
        "strokeWidth": 2,
        "x": {"expr": "width / 2"}
      }
    },    
    {
      "mark": {
        "type": "text",
        "radius": {"expr": "height/2.4"},
        "radiusOffset": 25,
        "fontSize": 12.5
        
      },
      "transform": [
        {"calculate": "datum.sales + ' M'", "as": "globalSales"}
      ],
      "encoding": {
        "text": {
          "field": "globalSales", "type": "nominal"
        },
        "size":{
          "value": {"expr": "width/42"}
        }
      }
     
    }    
  ],
  "config": {
    "title": {
      "color": "white",
      "fontSize": 20
    },
    "legend": {
      "titleColor": "white",
      "labelColor": "white",
      "titlePadding": 10
    },
    "font": "Trebuchet MS"
  }
}
