{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "description": "A simple donut chart with embedded data.",
  "transform": [
    {"filter": "datum.Genre == 'Sports'"}
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/MaryamPeer/Homework-10/main/Game_Sales.csv"
  },
  "encoding": {
    "theta": {"field": "sales", "type": "quantitative", "stack": true},
    "color": {
      "field": "Platform", 
      "type": "nominal",
      "scale": {"range": ["#decbe4", "#fbb4ae", "#fed9a6"]},
      "legend": {
        "orient": "top-right",
        "labelFontSize": 12,
        "titleFontSize": 15
      }
    }
  },
  "layer": [
    {
      "mark": {
        "type": "arc", 
        "innerRadius": {"expr": "width/6"}, 
        "outerRadius": {"expr": "width/4"}, 
        "stroke": "white", 
        "strokeWidth": 2,
        "x": {"expr": "width / 2"}
      }     
      
    },    
    {
      "mark": {
        "type": "text",
        "radius": {"expr": "width/3.5"},
        "fontSize": 12.5
        
      },
      "transform": [
        {"calculate": "datum.sales + ' M'", "as": "globalSales"}
      ],
      "encoding": {
        "text": {
          "field": "globalSales", "type": "nominal"
        }
      }
    }    
  ]
}
